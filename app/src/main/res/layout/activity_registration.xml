<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/dropshadow_background"
    tools:context=".Registration">

    <androidx.cardview.widget.CardView
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_arrowback"
            android:tint="@color/material_blue_grey_80"
            tools:ignore="UseAppTint" />
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/dropshadow"
        android:backgroundTint="@color/semiWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="-80dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_hive"
            android:layout_marginTop="-50dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE NEW ACCOUNT"
            android:gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:textSize="24sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/material_blue_grey_80"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/goBackLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login in here."
            android:gravity="center"
            android:fontFamily="@font/poppinsregular"
            android:textSize="11sp"
            android:layout_marginTop="-20dp"
            android:textColor="@color/material_blue_grey_80"
            tools:ignore="HardcodedText" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="20dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_person"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_Edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/stlye_border_relative_three"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                app:startIconDrawable="@drawable/ic_person"
                tools:layout_editor_absoluteX="0dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-10dp"
            android:padding="20dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_email"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_Edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/stlye_border_relative_three"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                app:startIconDrawable="@drawable/ic_email"
                tools:layout_editor_absoluteX="0dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/float_transparent"
            android:maxLines="1"
            android:padding="20dp"
            app:endIconMode="password_toggle"
            app:hintEnabled="false"
            app:startIconDrawable="@drawable/ic_lock"
            tools:ignore="ExtraText,HardcodedText,RtlHardcoded">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_Edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/stlye_border_relative_three"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                tools:ignore="MissingConstraints,RtlHardcoded" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/Register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dropshadow_button_completed"
            android:fontFamily="@font/poppinsemibold"
            android:text="REGISTER"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="HardcodedText,MissingClass,UsingOnClickInXml" />

    </LinearLayout>

</LinearLayout>